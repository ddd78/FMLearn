<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/shap_item_backgrdound">

    <com.a78.com.fmlearn.views.RoundRectImageView
        android:id="@+id/item_recommodation_image"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_toEndOf="@id/item_recommodation_image"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_recommodation_title_text"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/OneWord"
            android:text="标题标题标题标题标题标题标题"/>

        <TextView
            android:id="@+id/item_recommodation_context_text"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/TwoWord"
            android:text="内容内容内容内容内容内容内容"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/play"/>
                <TextView
                    android:id="@+id/item_recommodation_play_num_text"
                    android:layout_width="45dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="120W"
                    android:textSize="7sp"
                    android:textColor="@color/TwoWord"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="30dp"
                >
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@mipmap/sound"/>
                <TextView
                    android:id="@+id/item_recommodation_sound_num_text"
                    android:layout_width="45dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="23j"
                    android:textSize="7sp"
                    android:textColor="@color/TwoWord"/>
            </LinearLayout>
            
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>