<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/shap_item_backgrdound">

    <TextView
        android:id="@+id/recommendation_content_list_order"
        android:text="1"
        android:textSize="18dp"
        android:padding="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:textSize="12dp"
        android:text="2018-9-132"
        android:layout_alignParentRight="true"
        android:id="@+id/recommendation_content_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/recommendation_content_list_order"
        android:layout_toLeftOf="@+id/recommendation_content_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_recommendation_content_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dfsff题标题标题标题标题标题标题标题"
            android:textColor="@color/OneWord"
            android:textSize="16sp"
            android:lines="1"
            android:ellipsize="end"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:tint="@color/TwoWord"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/play"/>
            <TextView
                android:id="@+id/item_recommendation_content_readcount_text"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/TwoWord"
                android:text="1444W"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
