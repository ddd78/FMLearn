<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a78.com.fmlearn.SearchActivity"
    android:background="@color/ThreeWord"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/search_back_image"
            android:layout_gravity="center_vertical"
            android:tint="@color/maincolor"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/back"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:paddingLeft="8dp"
            android:paddingRight="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shap_edit_bg"
            android:layout_gravity="center_vertical">
        <EditText
            android:id="@+id/search_content_edit"
            android:hint="请输入专辑关键字"
            android:textColor="@color/OneWord"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/shap_edit_cursor"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shap_edit_bg"
            />
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/search_delete_image"
                android:padding="2dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/delete"
                android:tint="@color/TwoWord"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/search_beign_text"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="搜索"
            android:textColor="@color/maincolor"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/search_contain_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
